<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sell.menu.unit.UnitSelectedActivity"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:padding="@dimen/nav_margin_item"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/layout_unit_bar">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:id="@+id/ibtn_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/unit"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/colorWhite" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add"
            android:id="@+id/imgbtn_add"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_unit_bar"
        android:id="@+id/lv_unit"
        android:layout_above="@id/frame_btn_done">
    </ListView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_size"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_marginBottom="@dimen/margin_half_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        app:cardCornerRadius="@dimen/corner_radius"
        android:layout_alignParentBottom="true"
        android:id="@+id/frame_btn_done">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:text="@string/done"
            android:gravity="center"
            android:textSize="@dimen/title_text_size"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>
